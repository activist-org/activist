{
  "extends": "./.nuxt/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["@types/node", "vitest"],
    "paths": {
      "~": ["./app"],
      "~/*": ["./app/*", "./*"],
      "~~": ["."],
      "~~/*": ["./*"]
    }
  },
  "include": [
    "test/**/*.ts",
    "test/**/*.d.ts",
    "vitest-globals.d.ts"
  ]
}
