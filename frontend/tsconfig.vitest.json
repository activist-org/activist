{
  "extends": "./.nuxt/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["@types/node", "vitest"],
    "paths": {
      "~": ["./app"],
      "~/*": ["./app/*", "./*"],
      "~~": ["."],
      "~~/*": ["./*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.tsx",
    "app/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx",
    "test/**/*.vue"
  ]
}
