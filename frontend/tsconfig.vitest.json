{
  "extends": "./.nuxt/tsconfig.node.json",
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "types": ["@types/node", "vitest"],
    "paths": {
      "~": ["./app"],
      "~/*": ["./app/*", "./*"],
      "~~": ["."],
      "~~/*": ["./*"],
      "#shared/*": ["./shared/*"]
    }
  },
  "include": [
    "tests/**/*.ts",
    "tests/**/*.d.ts"
  ]
}
